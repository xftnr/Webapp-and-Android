<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Create your post here..."
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="176dp"
        android:text="Tags:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_centerVertical="true"
        android:text="Category:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="130dp"
        android:text="Description:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="67dp"
        android:text="Post title:"
        android:textSize="16sp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="49dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_title"
            android:layout_width="222dp"
            android:layout_height="38dp"
            android:hint="What did you see?" />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/input_description"
        android:layout_width="240dp"
        android:layout_height="86dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="118dp"
        android:ems="10"
        android:hint="Tell us more about it"
        android:inputType="textMultiLine" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/input_tags"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp"
        android:hint="Create your tags" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/btn_to_image"
        android:text="Picture(s):"
        android:textSize="16sp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView5"
        android:text="Clear"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="58dp"
        android:text="Submit"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="99dp"
        android:layout_height="47dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-14dp"
        android:padding="5dp" />


    <Button
        android:id="@+id/btn_to_image"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/categorySpinner"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="62dp"
        android:text="Choose Image..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

</RelativeLayout>